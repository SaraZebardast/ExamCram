<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:weightSum="4"
    android:orientation="vertical"
    tools:context=".CourseSelect">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="159dp"
        android:layout_weight="1">


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="63dp"
            android:layout_marginBottom="41dp"
            android:fontFamily="@font/fullbold"
            android:text="What do you want to study?"
            android:textColor="@color/white"
            android:textSize="25dp"></TextView>

        <TextView
            android:layout_width="276dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/title"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="107dp"
            android:layout_marginBottom="-21dp"
            android:fontFamily="@font/regular"
            android:text="*select your study material."
            android:textColor="@color/white"
            android:textSize="12dp"></TextView>

        <TextView
            android:id="@+id/name"
            android:layout_width="91dp"
            android:layout_height="47dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="221dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="92dp"
            android:layout_toStartOf="@+id/profilepic"
            android:fontFamily="@font/semibold"
            android:text="Username"
            android:textColor="@color/white"
            android:textSize="18sp"></TextView>

        <ImageView
            android:id="@+id/profilepic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:onClick="displaySettings"
            android:src="@drawable/steve"></ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_margin="10dp"
        android:layout_weight="3"
        android:background="@drawable/roundedbackground2">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationlocation"
            android:layout_width="77dp"
            android:layout_height="68dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp"
            android:visibility="visible"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/location" />


        <LinearLayout
            android:id="@+id/errorMessagesLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="55dp"
            android:gravity="center"
            android:visibility="invisible">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_baseline_error_24"></ImageView>

            <TextView
                android:id="@+id/errorMessages"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_above="@+id/firstNameSignUp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/semibold"
                android:gravity="center_vertical"
                android:text="Sign up"
                android:textColor="@color/white"
                android:textSize="15sp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/course1_layout"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="404dp"
            android:gravity="center">

            <Spinner
                android:id="@+id/course1chosen"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/roundedbutton"
                android:popupBackground="@drawable/roundedbutton"
                android:popupElevation="10dp"></Spinner>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_drop_down_24"></ImageView>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/course2_layout"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_above="@+id/createAccountButton"
            android:layout_marginBottom="244dp"
            android:gravity="center">

            <Spinner
                android:id="@+id/course2chosen"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/roundedbutton"
                android:popupBackground="@drawable/roundedbutton"
                android:popupElevation="10dp"></Spinner>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_drop_down_24"></ImageView>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/course3_layout"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="253dp"
            android:gravity="center">

            <Spinner
                android:id="@+id/course3chosen"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/roundedbutton"
                android:popupBackground="@drawable/roundedbutton"
                android:popupElevation="10dp"></Spinner>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_drop_down_24"></ImageView>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/course4_layout"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="178dp"
            android:gravity="center">

            <Spinner
                android:id="@+id/course4chosen"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/roundedbutton"
                android:popupBackground="@drawable/roundedbutton"
                android:popupElevation="10dp"></Spinner>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_drop_down_24"></ImageView>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/course5_layout"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="102dp"
            android:gravity="center">

            <Spinner
                android:id="@+id/course5chosen"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/roundedbutton"
                android:popupBackground="@drawable/roundedbutton"
                android:popupElevation="10dp"></Spinner>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_drop_down_24"></ImageView>


        </LinearLayout>

        <Button
            android:id="@+id/createAccountButton"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="141dp"
            android:layout_marginEnd="141dp"
            android:layout_marginBottom="35dp"
            android:backgroundTint="@color/jungleGreen"
            android:fontFamily="@font/semibold"
            android:gravity="center"
            android:onClick="onSearchButtonTap"
            android:text="SEARCH"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:animateLayoutChanges="true"
            android:background="@color/black"
            app:itemIconTint="@drawable/selector"
            app:itemTextColor="@drawable/selector"
            app:menu="@menu/bottom_nav_menu" />

    </RelativeLayout>

</LinearLayout>